<Window x:Class="imgLoader_WPF.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:imgLoader_WPF.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="500" Width="500">
    <Grid>
        <ListBox x:Name="List" HorizontalAlignment="Center" Height="225" VerticalAlignment="Center" Width="304" ItemsSource="{Binding ModelItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding ElementName=List, Path=DataContext.Key}"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Button" HorizontalAlignment="Center" Margin="0,369,0,0" VerticalAlignment="Top" Height="70" Width="184" Click="Button_Click"/>
    </Grid>
</Window>
