            <ProgressBar x:Name="PBar" Grid.Row="0" Height="7" VerticalAlignment="Bottom" DockPanel.Dock="Top"/>
            <Canvas Grid.Row="1" x:Name="Cnvs"/>
        </Grid>
    </Grid>
</Window>
