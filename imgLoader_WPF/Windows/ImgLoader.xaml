<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loaderListCtrl="clr-namespace:imgLoader_WPF.LoaderListCtrl"
        x:Class="imgLoader_WPF.Windows.ImgLoader"
        mc:Ignorable="d"
        Title="ImgLoader" Height="450" Width="800" Loaded="ImgLoader_WPF_Loaded" WindowStartupLocation="CenterScreen" Closing="ImgLoader_WPF_Closing">

    <Grid>
        <Border BorderBrush="Black" BorderThickness=".5" Margin="10,32,10,64" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ScrollViewer x:Name="Scroll" HorizontalScrollBarVisibility="auto" VerticalScrollBarVisibility="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ItemsControl x:Name="ItemCtrl" ItemsSource="{Binding Index}">
                    <ItemsControl.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="열기" IsEnabled="False" Click="Open_Click"/>
                            <MenuItem Header="탐색기에서 열기" IsEnabled="False" Click="OpenExplorer_Click"/>
                            <Separator/>
                            <MenuItem Header="취소" IsEnabled="False" Click="Cancel_Click"/>
                            <MenuItem Header="일시중지" IsEnabled="False" Click="Pause_Click"/>
                            <MenuItem Header="재개" IsEnabled="False" Click="Resume_Click"/>
                            <Separator/>
                            <MenuItem Header="목록에서만 제거" IsEnabled="False" Click="RemoveOnlyList_Click"/>
                            <Separator/>
                            <MenuItem Header="삭제" IsEnabled="False" Click="Delete_Click"/>
                        </ContextMenu>
                    </ItemsControl.ContextMenu>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <loaderListCtrl:LoaderList VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="White" Orientation="Vertical" MouseRightButtonDown="LList_MouseRightButtonDown">
                            </loaderListCtrl:LoaderList>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <loaderListCtrl:LoaderItem/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Button Content="테스트용 아이템 추가" HorizontalAlignment="Right" Margin="0,0,10,20" VerticalAlignment="Bottom" Height="27" Width="78" Click="Button_Click" />
        <Button Content="랜덤" HorizontalAlignment="Right" Margin="0,0,96,20" VerticalAlignment="Bottom" Height="27" Width="78" Click="Button_Click_1"/>
        <Button Content="설정" HorizontalAlignment="Right" Margin="0,0,182,20" VerticalAlignment="Bottom" Height="27" Width="78" Click="Button_Click_2"/>

        <TextBox x:Name="TxtUrl" HorizontalAlignment="Stretch" Height="19" Margin="10,10,10,0" Text="주소 입력 후 Enter 키로 다운로드 시작" TextWrapping="Wrap" VerticalAlignment="Top" KeyUp="TxtUrl_KeyUp" PreviewMouseUp="TxtUrl_PreviewMouseUp"/>
        <Button Content="테스트 1" HorizontalAlignment="Right" Margin="0,0,265,20" VerticalAlignment="Bottom" Height="27" Width="78" Click="Test1"/>
        <Button Content="모두 비움" HorizontalAlignment="Right" Margin="0,0,347,20" VerticalAlignment="Bottom" Height="27" Width="78" Click="Button_Click_4"/>
        <Button Content="정지" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,135,20" Height="27" Width="76" Click="Button_Click_5"/>
        <Label x:Name="LblCount" Content="0개 항목" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,40"/>
        <Button Content="새로고침" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="21" Margin="147,0,0,20" Width="70" Click="Refresh_Click"/>
    </Grid>
</Window>
