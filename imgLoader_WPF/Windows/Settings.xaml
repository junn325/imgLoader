<Window x:Class="imgLoader_WPF.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:imgLoader_WPF.Windows"
        mc:Ignorable="d"
        Title="Settings" Width="724" Height="145" MinWidth="724" MinHeight="128" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44.014" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="다운로드할 경로" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center" Height="26" Width="98"/>
        <TextBox x:Name="TxtPath" Text="더블클릭하여 다운로드 경로를 선택하거나 직접 입력" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="120,0,20,0" VerticalAlignment="Center" MouseDoubleClick="TextBox_MouseDoubleClick" TextChanged="TextBox_TextChanged" Height="18"/>

        <CheckBox x:Name="CheckAuthorName" Content="폴더명에 작가 이름을 표시하지 않음" Grid.Row="1" Grid.Column="0" Margin="20,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CheckAuthorName_Click" Height="15"/>
        <CheckBox x:Name="CheckDupl" Content="중복 작품 다운로드 시 물어보지 않음" Grid.Row="1" Grid.Column="0" Margin="20,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CheckDupl_Click" Height="15"/>
        <CheckBox x:Name="CheckTagSex" Content="태그의 성별을 항상 텍스트로 표시함" Grid.Row="1" Grid.Column="0" Margin="20,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CheckFolder_Click" Height="15"/>

        <CheckBox x:Name="CheckImmid" Content="항목 모두 즉시 다운로드 시작" Grid.Row="1" Grid.Column="1" Margin="10,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CheckImmid_Click" Height="15"/>
        <CheckBox x:Name="CheckFolder" Content="북마크에서 로드한 항목은 북마크 제목으로 폴더명을 정함" Grid.Row="1" Grid.Column="1" Margin="10,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CheckFolder_Click" Height="15"/>
        <CheckBox x:Name="CheckScroll" Content="항목의 태그를 마우스로 스크롤하지 않음" Grid.Row="1" Grid.Column="1" Margin="10,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CheckScroll_Click" Height="15"/>
    </Grid>
</Window>
