<Window x:Class="imgLoader_WPF.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:imgLoader_WPF.Windows"
        mc:Ignorable="d"
        Title="Settings" Width="600" Height="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Label Content="다운로드할 경로" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center"/>
        <TextBox Text="더블클릭하여 다운로드 경로를 선택하거나 직접 입력" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="150,0,20,0" VerticalAlignment="Center" />
        <CheckBox Content="폴더명에 작가 이름 표시" Grid.Column="0" Grid.Row="1"  Margin="20,0,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="항목을 추가할 때마다 자동으로 선택" Grid.Row="1" Grid.Column="0" Margin="20,20,0,0" VerticalAlignment="Top"/>

        <CheckBox Content="이미 존재하는 이미지를 항상 다시 다운로드" Grid.Row="1" Grid.Column="1" Margin="0,0,96,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <CheckBox Content="북마크에서 로드한 항목은 북마크 제목으로 폴더명을 정함" Grid.Row="1" Grid.Column="1" Margin="0,20,20,0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>
</Window>
