<Window x:Class="imgLoader_WPF.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:imgLoader_WPF.Windows"
        mc:Ignorable="d"
        Title="Settings" Width="724" Height="128" MinWidth="724" MinHeight="128" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="다운로드할 경로" HorizontalAlignment="Left" Margin="20,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtPath" Text="더블클릭하여 다운로드 경로를 선택하거나 직접 입력" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="120,20,20,0" VerticalAlignment="Top" MouseDoubleClick="TextBox_MouseDoubleClick" TextChanged="TextBox_TextChanged"/>
        
        <CheckBox x:Name="CheckAuthorName" Content="폴더명에 작가 이름 표시" Grid.Row="1" Grid.Column="0" Margin="20,0,0,0" VerticalAlignment="Top" Click="CheckAuthorName_Click"/>
        <CheckBox x:Name="CheckDupl" Content="중복 작품 다운로드 시 물어보지 않음" Grid.Row="1" Grid.Column="0" Margin="20,20,0,0" VerticalAlignment="Top"  Click="CheckDupl_Click"/>

        <CheckBox x:Name="CheckImmid" Content="항목 모두 즉시 다운로드 시작" Grid.Row="1" Grid.Column="1" Margin="0,0,172,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="CheckImmid_Click"/>
        <CheckBox x:Name="CheckFolder" Content="북마크에서 로드한 항목은 북마크 제목으로 폴더명을 정함" Grid.Row="1" Grid.Column="1" Margin="0,20,20,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="CheckFolder_Click"/>
    </Grid>
</Window>
